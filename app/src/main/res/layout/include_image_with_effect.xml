<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_white_shadow"
        app:layout_constraintBottom_toBottomOf="@id/ivSubcategory"
        app:layout_constraintEnd_toEndOf="@id/ivSubcategory"
        app:layout_constraintStart_toStartOf="@id/ivSubcategory"
        app:layout_constraintTop_toTopOf="@id/ivSubcategory" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivSubcategory"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/piActionLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:indicatorColor="@color/blue_sky_600"
        app:indicatorSize="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackColor="@color/blue_sky_600"
        app:trackCornerRadius="2dp"
        app:trackThickness="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>